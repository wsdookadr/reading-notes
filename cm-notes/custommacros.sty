% floor and ceil
\newcommand{\floor}[1]{%
	\left\lfloor {#1} \right\rfloor%
}
\newcommand{\ceil}[1]{%
	\left\lceil {#1} \right\rceil%
}

% rising/falling factorial
\newcommand{\ffac}[1]{%
  x^{\underline{#1}}%
}
\newcommand{\ffact}[2]{% 
  {#1}^{\underline{#2}}%
}
\newcommand{\rfac}[1]{%
  x^{\overline{#1}}%
}
\newcommand{\rfact}[2]{% 
  {#1}^{\overline{#2}}%
}
\newcommand{\monus}[2]{%
  {#1}\bm{\dotdiv}{#2}%
}
